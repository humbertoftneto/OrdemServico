<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
<TextView
    android:id="@+id/t_descricaoServico"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Descrição do serviço"
    android:textSize="23dp"
    android:textColor="#000000"/>
    <TextView
        android:id="@+id/t_setorServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Setor"
        android:textSize="20dp"
        android:layout_below="@id/t_descricaoServico"/>
    <ImageView
        android:id="@+id/I_statusServico"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/green"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@id/t_descricaoServico"/>

</RelativeLayout>
